<Window x:Class="TestTask.AddCardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestTask"
        mc:Ignorable="d"
        Title="Окно добавления карточки" Height="200" Width="320">
    <Grid>
        <StackPanel Margin="10,10,10,0">
            <DockPanel Width="292">
                <Label FontSize="16" Width="auto" Height="30" Margin="0 0 0 0">Название:</Label>
            </DockPanel>
            <DockPanel Width="292">
                <TextBox Width="282" Height="23" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0 5 10 0" x:Name="TextBoxName"></TextBox>
            </DockPanel>
            <DockPanel  Height="50" Width="292">
                <Button x:Name="btnOpenFile" Click="BtnOpenFile_OnClick" Height="38" Margin="0 0 10 0" Width="auto" Content="Выбрать картинку" HorizontalAlignment="Left"/>
            </DockPanel>
            <DockPanel Width="292" Height="37">
                <Button Click="AddCard_OnClick" Height="35" Width="76" HorizontalAlignment="Left">Добавить</Button>
            </DockPanel>
        </StackPanel>
    </Grid>
</Window>
